	<body>
		<div id="global">
			
			<div id="entete">
				<div id="logo">
					<h1><a href="/" title="Segwada !"></a></h1>
				</div>

				<div id="flags">
					<ul>
						<li><a href="#" title="Français" class="fr_lang"></a></li>
						<li><a href="#" title="English" class="en_lang"></a></li>
					</ul>
				</div>
				
				<form method="post" id="login_form" action="">
					<p>
						<label for="input_login">Login :
						<input type="text" name="login" id="input_login" class="input_login" />
					</p>
					<p>
						<label for="input_password">Mot de passe :
						<input type="password" name="password" id="input_password" class="input_password" />
					</p>
					<p>
						<input type="submit" id="input_search_btn" class="input_search_btn" value="Se connecter"/>
					</p>
				</form>
			</div>

			
			<div id="barre_nav">
				<ul id="fil_ariane">
					<li class="home"><a href="/"></a></li>
					<% @bread_crumbs.each do |url, name| %>
						<li class=""><a href="<%= url %>"><%= name %></a></li>
					<% end %>
				</ul>

				
				<form method="post" id="search_form" action="">
					<input type="text" name="texte" id="input_search_text" class="input_search_text" />
					<input type="submit" id="input_search_btn" class="input_search_btn" value=""/>
				</form>
			</div>
			<div id="bloc_principal">
				<div id="col_gauche" class="column">
					<div id="menu_nav">
						<ul id="menu">
							<li>
								<a href="#">Pr&eacute;sentation</a>
								<ul>
									<li><a href="/x2">Segway X2</a></li>
								</ul>
							</li>
							<li>
								<a href="#">Excursions</a>
								<ul>
									<li><a href="/excursions">Pointe à Pitre</a></li>
									<li><a href="/excursions">Saint-Anne</a></li>
									<li><a href="/excursions">Saint-François</a></li>
									<li><a href="/excursions">Les Saintes</a></li>
									<li><a href="/excursions">Deshaies</a></li>
									<li><a href="/excursions">Capesterre</a></li>
									<li><a href="/excursions">Marie-Galante</a></li>
									<li><a href="/excursions">La Désirade</a></li>
								</ul>
							</li>
							<li>
								<a href="#">Incentive</a>
								<ul>
									<li><a href="/seminaires">Séminaires</a></li>
								</ul>
							</li>
							<li><a href="/contact">Nous contacter</a></li>
						</ul>
					</div>
				</div>

				
				<div id="contenu" class="column">
					<div id="article">
						<%= yield %>
					</div>
				</div>
				
				<div id="col_droite" class="column">
					<object 
						classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000"
						codebase="http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=7,0,19,0"
						id="movie1"
						width="150" height="375">
						<param name="movie" value="/flash/banner.swf"/>
						<param name="bgcolor" value="#FFFFFF"/>
						<param name="quality" value="high"/>
						<param name="allowscriptaccess" value="samedomain"/>
						<embed
							type="application/x-shockwave-flash"
							name="movie1"
							width="150" height="375"
							src="flash/banner.swf"
							bgcolor="#FFFFFF"
							quality="high"
							allowscriptaccess="samedomain">
						</embed>
					</object>
				</div>
			
			</div>
			<div id="footer">
				<ul id="list_footer">
					<li><a href="/">Accueil</a>&nbsp;|&nbsp;</li>
					<li><a href="/contact">Nous contacter</a>&nbsp;|&nbsp;</li>
					<li><a href="/contact">A propos de nous</a>&nbsp;|&nbsp;</li>
					<li>&copy; Segwada 2010</li>
				</ul>
			</div>
		</div>	
